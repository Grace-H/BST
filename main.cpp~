	success = true;
	cout << "Enter complete file name. Numbers must be seperated by spaces" << endl;
	cin.get(input, 256);
	cin.get();

	//get from file
	ifstream is(input);
	is.get(nums, 100000);
	cout << nums << endl;
	is.close();
      }
      //add to tree
    }
    //remove from tree
    else if(strcmp(removestr, input) == 0){
      cout << "Enter the number to remove from tree: " << endl;
      cin.get(nums, 100000);
      cin.get();
      //remove
    }
    else if(strcmp(printstr, input) == 0){
      //visualize
    }
    else if(strcmp(quitstr, input) == 0){
      go = false;
